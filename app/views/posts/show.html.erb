<div class="row mt-5">
  <aside class="col-sm-3">
    <div class="card border border-secondary">
      <div class="card-header">
        <h5 class="card-title text-center pt-2"><%= @user.name %></h5>
      </div>
      <div class="card-body text-center">
        <img class="rounded-circle img-fluid border border-secondary" src="<%= gravatar_url(@user, { size: 200 }) %>" alt="ユーザ画像">
        <% if logged_in? %>
        <%= render 'relationships/follow_button', user: @user %>
        <% end %>
      </div>
    </div>
  </aside>
  <div class="col-sm-9 border border-secondary text-center">
    <h1 class="card-title pt-5 pb-4"><%= @post.title %></h1>
    <%= image_tag @post.image.url, :width => '100%', :height => '50%' , class: "img-fluid img-thumbnail"%>
    <h1 class="card-title pt-5 pb-5">コーディネートの紹介</h1>
    <h4><%= @post.content %></h4>
    <% if logged_in? %>
    <div class="mt-5 mb-3">
      <%= render "favorites/favorite_button", post: @post %>
    </div>
    <div>
      <% if current_user == @post.user %>
        <%= link_to "投稿削除", @post, method: :delete, data: { confirm: "投稿を削除しますか？" }, class: 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<div class="row justify-content-end">
  <div class=" col-sm-offset-3 col-sm-9 border border-secondary mt-3">
    <h5 class="pt-3">コメント一覧</h5>
    <% @comments.each do |comment| %>
      <div class="mt-3 mb-3 border">
        <img class="mr-3 ml-3 mt-2 mb-2 rounded-circle border" src="<%= gravatar_url(comment.user, { size: 30 }) %>" alt="">
        <a class="pr-3" href="/users/<%= comment.user.id %>"><%= comment.user.name %></a>
        <%= comment.content.truncate(35) %>
        <% if current_user == comment.user %>
            <%= link_to "削除", comment_path(comment.id), method: :delete, data: { confirm: "コメントを削除しますか？" }, class: 'btn btn-danger btn-sm ml-5' %>
        <% end %>
      </div>
    <% end %>
    <% if logged_in? %>
    <div class="mt-5 mb-4">
      <h5 class="pt-3 pb-3">コメントを投稿する</h5>
      <%= form_for [@post, @comment], method: :post do |f| %>
        <%= f.text_field :content %>
        <%= f.hidden_field :post_id, value: @post.id %>
        <%= f.submit 'コメントする' %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>