<% if users.any? %>
  <div class="row">
   <%= render 'layouts/sidebar' %>
   <div class="col-sm-9 mt-5">
     <h3 class="text-center">ユーザ一覧</h3>
      <ul class="list-unstyled mt-5">
        <% users.each do |user| %>
          <li class="media border">
            <img class="m-2 ml-3 rounded-circle border" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
            <div class="media-body d-flex">
              <div class="form-inline">
                <h3 class="pt-3 pl-5"><%= user.name %></h3>
                <a class="btn btn-primary ml-5 mt-3" href="/" role="button">フォロー</a>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <div class="mt-5"><%= paginate users %></div>
    </div>
  </div>
<% end %>