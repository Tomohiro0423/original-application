<% if users.any? %>
  <div class="row">
   <%= render 'layouts/sidebar' %>
   <div class="col-sm-9 mt-5">
     <h3 class="text-center">ユーザ一覧</h3>
      <ul class="list-inline mt-5">
        <% users.each do |user| %>
          <%= link_to user, class: "text-dark" do %>
            <li class="media border border-secondary form-inline d-flex align-items-around justify-content-start">
              <img class="m-2 ml-5 rounded-circle border" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
              <h3 class="pt-3 pl-5"><%= user.name %></h3>
            </li>
          <% end %>
        <% end %>
      </ul>
      <div class="mt-5"><%= paginate users %></div>
    </div>
  </div>
<% end %>